    <style>
        :root {
            --c-void: #030507;
            --c-panel: #0a0f14;
            --c-panel-border: #1c252e;
            --c-ice-100: #00f0ff;
            --c-ice-50: rgba(0, 240, 255, 0.5);
            --c-ice-10: rgba(0, 240, 255, 0.1);
            --c-text-main: #e0f4f5;
            --c-text-muted: #5d7685;
            --c-alert: #ff3366;
            --h-header: 60px;
            --h-footer: 50px;
            --radius: 6px;
            --glow: 0 0 15px var(--c-ice-10);
            --border-glass: 1px solid rgba(255, 255, 255, 0.08);
            --font-ui: 'Inter', sans-serif;
            --font-mono: 'JetBrains Mono', monospace;
        }

        * {
            box-sizing: border-box;
            outline: none;
            -webkit-tap-highlight-color: transparent;
        }

        body {
            margin: 0;
            height: 100vh;
            background-color: var(--c-void);
            background-image:
                radial-gradient(circle at 50% 0%, #0d1821 0%, var(--c-void) 60%),
                url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)' opacity='0.03'/%3E%3C/svg%3E");
            font-family: var(--font-ui);
            color: var(--c-text-main);
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .cryo-a {
            width: 100%;
            height: 100%;
            display: grid;
            grid-template-rows: auto 1fr auto;
            background: rgba(10, 15, 20, 0.6);
            backdrop-filter: blur(12px);
        }

        @media (min-width: 1024px) {
            .cryo-a {
                width: 95vw;
                height: 92vh;
                border: var(--border-glass);
                border-radius: var(--radius);
                box-shadow: 0 20px 50px rgba(0, 0, 0, 0.7);
            }
        }

        .deck-panel {
            padding: 20px;
            border-bottom: var(--border-glass);
            background: linear-gradient(180deg, rgba(255, 255, 255, 0.02) 0%, transparent 100%);
            display: flex;
            flex-direction: column;
            gap: 16px;
        }

        .deck-info {
            display: flex;
            justify-content: space-between;
            align-items: flex-end;
        }

        .track-title {
            font-family: var(--font-mono);
            font-size: 14px;
            letter-spacing: 1px;
            color: var(--c-ice-100);
            text-shadow: 0 0 8px var(--c-ice-50);
            margin-bottom: 4px;
            text-transform: uppercase;
        }

        .track-stats {
            display: flex;
            gap: 12px;
            font-family: var(--font-mono);
            font-size: 11px;
            color: var(--c-text-muted);
        }

        .stat-value {
            color: #fff;
            margin-left: 4px;
        }

        .viz-hold {
            position: relative;
            height: 128px;
            background: #05080a;
            border: 1px solid #1c252e;
            border-radius: 4px;
            overflow: hidden;
        }

        #waveform,
        #grid-layer,
        #spectrum-layer {
            position: absolute;
            inset: 0;
            width: 100%;
            height: 100%;
        }

        #spectrum-layer {
            z-index: 0;
            opacity: 0.3;
            mix-blend-mode: screen;
        }

        #waveform {
            z-index: 1;
        }

        #grid-layer {
            z-index: 2;
            pointer-events: none;
        }

        .controls-row {
            display: flex;
            gap: 12px;
            align-items: center;
        }

        .btn-dl {
            background: rgba(255, 255, 255, 0.03);
            border: var(--border-glass);
            color: var(--c-text-main);
            width: 36px;
            height: 36px;
            border-radius: 4px;
            cursor: pointer;
            transition: all 0.2s ease;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .btn-dl:hover {
            background: var(--c-ice-10);
            border-color: var(--c-ice-50);
            color: var(--c-ice-100);
        }

        .btn-dl.active {
            background: var(--c-ice-100);
            color: #000;
            box-shadow: var(--glow);
            border-color: var(--c-ice-100);
        }

        .zoom-slider {
            flex: 1;
            -webkit-appearance: none;
            background: rgba(255, 255, 255, 0.1);
            height: 2px;
            border-radius: 2px;
        }

        .zoom-slider::-webkit-slider-thumb {
            -webkit-appearance: none;
            width: 10px;
            height: 10px;
            background: var(--c-ice-100);
            border-radius: 50%;
            cursor: ew-resize;
            box-shadow: 0 0 8px var(--c-ice-100);
        }

        .vault-panel {
            flex: 1;
            overflow-y: auto;
            padding: 0;
            position: relative;
        }

        .vault-panel::-webkit-scrollbar {
            width: 6px;
        }

        .vault-panel::-webkit-scrollbar-track {
            background: #05080a;
        }

        .vault-panel::-webkit-scrollbar-thumb {
            background: #1c252e;
            border-radius: 3px;
        }

        .vault-panel::-webkit-scrollbar-thumb:hover {
            background: var(--c-text-muted);
        }

        .file-tree {
            list-style: none;
            padding: 0;
            margin: 0;
            font-family: var(--font-ui);
            font-size: 13px;
        }

        .node {
            border-bottom: 1px solid rgba(255, 255, 255, 0.03);
            user-select: none;
        }

        .node-content {
            display: flex;
            align-items: center;
            padding: 10px 20px;
            cursor: pointer;
            transition: background 0.15s;
            color: var(--c-text-muted);
        }

        .node-content:hover {
            background: rgba(255, 255, 255, 0.02);
            color: var(--c-text-main);
        }

        .node-content.is-active {
            background: linear-gradient(90deg, var(--c-ice-10) 0%, transparent 100%);
            color: var(--c-ice-100);
            border-left: 2px solid var(--c-ice-100);
        }

        .node-icon {
            width: 20px;
            text-align: center;
            margin-right: 8px;
        }

        .node-check {
            margin-right: 12px;
            accent-color: var(--c-ice-100);
            cursor: pointer;
        }

        .sub-tree {
            display: none;
            background: rgba(0, 0, 0, 0.15);
        }

        .sub-tree.open {
            display: block;
        }

        .meta-tag {
            font-size: 10px;
            background: rgba(255, 255, 255, 0.05);
            padding: 2px 6px;
            border-radius: 2px;
            margin-left: auto;
            color: #666;
        }

        .footer-panel {
            height: var(--h-footer);
            border-top: var(--border-glass);
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 20px;
            background: #05080a;
        }

        .btn-action {
            background: transparent;
            border: 1px solid var(--c-ice-100);
            color: var(--c-ice-100);
            font-family: var(--font-mono);
            font-size: 11px;
            font-weight: 700;
            text-transform: uppercase;
            padding: 8px 24px;
            border-radius: 2px;
            cursor: pointer;
            transition: 0.2s;
            letter-spacing: 1px;
        }

        .btn-action:hover:not(:disabled) {
            background: var(--c-ice-100);
            color: #000;
            box-shadow: var(--glow);
        }

        .btn-action:disabled {
            border-color: #333;
            color: #444;
            cursor: not-allowed;
        }

        .hidden {
            display: none;
        }

        .blink {
            animation: blink 2s infinite;
        }

        @keyframes blink {

            0%,
            100% {
                opacity: 1;
            }

            50% {
                opacity: 0.5;
            }
        }
    </style>
