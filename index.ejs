        const hierarchy = buildHierarchy(tree);
        %>

        <div class="cryo-a">
            <section class="deck-panel">
                <div class="deck-info">
                    <div>
                        <div class="track-title" id="meta-title">NO TRACK</div>
                        <div class="track-stats">
                            <span>BPM <span id="meta-bpm" class="stat-value">--</span></span>
                            <span>TIME <span id="meta-time" class="stat-value">00:00</span></span>
                            <span>KBPS <span id="meta-bitrate" class="stat-value">--</span></span>
                        </div>
                    </div>
                    <i class="fas fa-compact-disc fa-spin" id="spinner"
                        style="color:var(--c-ice-100); opacity:0; transition:opacity 0.5s"></i>
                </div>

                <div class="viz-hold">
                    <canvas id="spectrum-layer"></canvas>
                    <div id="waveform"></div>
                    <canvas id="grid-layer"></canvas>
                </div>

                <div class="controls-row">
                    <button class="btn-dl" id="btn-play"><i class="fas fa-play"></i></button>
                    <button class="btn-dl" id="btn-stop"><i class="fas fa-stop"></i></button>
                    <div style="width:1px; height:20px; background:rgba(255,255,255,0.1); margin:0 8px;"></div>
                    <i class="fas fa-search-minus" style="font-size:10px; color:var(--c-text-muted)"></i>
                    <input type="range" class="zoom-slider" id="zoom-slider" min="20" max="500" value="100">
                    <i class="fas fa-search-plus" style="font-size:10px; color:var(--c-text-muted)"></i>
                </div>
            </section>

            <section class="vault-panel">
                <ul class="file-tree" id="file-root">
                    <% function renderTree(nodes) { nodes.sort((a,b)=> {
                        if (a.type === b.type) return a.name.localeCompare(b.name);
                        return a.type === 'directory' ? -1 : 1;
                        });

                        nodes.forEach(n => { %>
                        <li class="node">
                            <% if (n.type==='directory' ) { %>
                                <div class="node-content type-dir" data-path="<%= n.name %>">
                                    <i class="fas fa-caret-right node-icon" style="transition: transform 0.2s"></i>
                                    <input type="checkbox" class="node-check group-check">
                                    <span>
                                        <%= n.name %>
                                    </span>
                                </div>
                                <ul class="sub-tree">
                                    <%= renderTree(n.children) %>
                                </ul>
                                <% } else { %>
                                    <div class="node-content type-file" data-path="<%= n.path.replace(/\\/g, '/') %>"
                                        data-name="<%= n.meta.title || n.name %>"
                                        data-bitrate="<%= n.meta.bitrate ? Math.round(n.meta.bitrate / 1000) : 0 %>">
                                        <span class="node-icon"></span>
                                        <input type="checkbox" class="node-check file-check"
                                            value="<%= n.path.replace(/\\/g, '/') %>">
                                        <span style="overflow:hidden; text-overflow:ellipsis; white-space:nowrap;">
                                            <%= n.meta.artist ? n.meta.artist + ' - ' : '' %>
                                                <%= n.meta.title || n.name %>
                                        </span>
                                        <% if(n.meta.bitrate) { %>
                                            <span class="meta-tag">
                                                <%= Math.round(n.meta.bitrate / 1000) %>k
                                            </span>
                                            <% } %>
                                    </div>
                                    <% } %>
                        </li>
                        <% }); %>
                            <% } %>

                                <%= renderTree(hierarchy) %>
                </ul>
            </section>

            <footer class="footer-panel">
                <span style="font-family:var(--font-mono); font-size:11px; color:var(--c-text-muted);">
                    <span id="select-count" style="color:var(--c-ice-100)">0</span> ASSETS SELECTED
                    <span id="select-warn"></span>
                </span>
                <button id="btn-extract" class="btn-action" disabled>
                    EXTRACT <i class="fas fa-download" style="margin-left:6px"></i>
                </button>
            </footer>
        </div>

        <script type="module">
            import { guess } from 'web-audio-beat-detector';

            const S = {
                bpm: 0,
                beats: [],
                playing: false,
                files: new Set(),
                ctx: null,
                analyser: null,
                ws: null,
                raf: null
            };

            const el = (id) => document.getElementById(id);
            const ui = {
                grid: el('grid-layer'),
                spec: el('spectrum-layer'),
                tree: el('file-root'),
                title: el('meta-title'),
                bpm: el('meta-bpm'),
                bitrate: el('meta-bitrate'),
                time: el('meta-time'),
                dl: el('btn-extract'),
                count: el('select-count'),
                spin: el('spinner')
            };

            const ctx = {
                grid: ui.grid.getContext('2d'),
                spec: ui.spec.getContext('2d')
            };

            const resize = () => {
                const dpr = window.devicePixelRatio || 1;
                const r = ui.grid.parentElement.getBoundingClientRect();
                [ui.grid, ui.spec].forEach(c => {
                    c.width = r.width * dpr;
                    c.height = r.height * dpr;
                    c.style.width = `${r.width}px`;
                    c.style.height = `${r.height}px`;
                });
                ctx.grid.setTransform(dpr, 0, 0, dpr, 0, 0);
                ctx.spec.setTransform(dpr, 0, 0, dpr, 0, 0);
            };

            new ResizeObserver(resize).observe(ui.grid.parentElement);

            const clear = (c) => {
                c.save();
                c.setTransform(1, 0, 0, 1, 0, 0);
                c.clearRect(0, 0, c.canvas.width, c.canvas.height);
                c.restore();
            };

            const draw = () => {
                if (!S.playing) return;

                // Spectrum
                clear(ctx.spec);
                if (S.analyser) {
                    const len = S.analyser.frequencyBinCount;
                    const data = new Uint8Array(len);
                    S.analyser.getByteFrequencyData(data);
                    const w = ui.spec.width / window.devicePixelRatio;
                    const h = ui.spec.height / window.devicePixelRatio;
                    const barW = (w / len) * 2.5;
                    let x = 0;
                    for (let i = 0; i < len; i++) {
                        const barH = (data[i] / 255) * h;
                        ctx.spec.fillStyle = `rgba(0, 240, 255, ${data[i] / 500})`;
                        ctx.spec.fillRect(x, h - barH, barW, barH);
                        x += barW + 1;
                    }
                }

                // Grid
                clear(ctx.grid);
                if (S.beats.length && S.ws) {
                    const scroll = S.ws.renderer.scrollContainer;
                    const dur = S.ws.getDuration();
                    const w = ui.grid.width / window.devicePixelRatio;
                    const pxSec = scroll.scrollWidth / dur;
                    const start = scroll.scrollLeft / pxSec;
                    const end = (scroll.scrollLeft + w) / pxSec;

                    const visible = S.beats.filter(t => t >= start - 0.5 && t <= end + 0.5);
                    const h = ui.grid.height / window.devicePixelRatio;

                    ctx.grid.lineWidth = 1;
                    visible.forEach(t => {
                        const isDown = S.beats.indexOf(t) % 4 === 0;
                        const x = (t * pxSec) - scroll.scrollLeft;
                        ctx.grid.beginPath();
                        ctx.grid.moveTo(x, isDown ? 0 : 15);
                        ctx.grid.lineTo(x, h - (isDown ? 0 : 15));
                        if (isDown) {
                            ctx.grid.strokeStyle = 'rgba(255,255,255,0.8)';
                            ctx.grid.stroke();
                            ctx.grid.fillStyle = '#00f0ff';
                            ctx.grid.fillRect(x - 2, 0, 4, 4);
                        } else {
                            ctx.grid.strokeStyle = 'rgba(0,240,255,0.3)';
                            ctx.grid.stroke();
                        }
                    });
                }
                S.raf = requestAnimationFrame(draw);
            };

            const scan = async (buf) => {
                ui.bpm.innerText = "SCAN...";
                ui.bpm.classList.add('blink');
                try {
                    const { bpm, offset } = await guess(buf);
                    S.bpm = bpm;
                    ui.bpm.innerText = bpm.toFixed(1);
                    S.beats = [];
                    const interval = 60 / bpm;
                    for (let t = offset; t < Math.min(buf.duration, 1800); t += interval) S.beats.push(t);
                    if (!S.playing && S.ws) { clear(ctx.grid); draw(); cancelAnimationFrame(S.raf); } //  1 frame
                } catch {
                    ui.bpm.innerText = "N/A";
                } finally {
                    ui.bpm.classList.remove('blink');
                }
            };

            const initAudio = () => {
                S.ws = WaveSurfer.create({
                    container: '#waveform',
                    waveColor: '#1c252e',
                    progressColor: '#00f0ff',
                    cursorColor: '#fff',
                    barWidth: 2, barGap: 2, barRadius: 2, height: 'auto', normalize: true, interact: true,
                    backend: 'MediaElement'
                });

                S.ws.on('ready', () => {
                    ui.spin.style.opacity = '0';
                    S.ws.play();
                    S.ws.zoom(100);

                    if (!S.ctx) {
                        S.ctx = new (window.AudioContext || window.webkitAudioContext)();
                        const src = S.ctx.createMediaElementSource(S.ws.getMediaElement());
                        S.analyser = S.ctx.createAnalyser();
                        S.analyser.fftSize = 512;
                        src.connect(S.analyser);
                        S.analyser.connect(S.ctx.destination);
                    }
                    const buf = S.ws.getDecodedData();
                    if (buf) scan(buf);
                });

                S.ws.on('play', () => {
                    S.playing = true;
                    el('btn-play').innerHTML = '<i class="fas fa-pause"></i>';
                    draw();
                });

                S.ws.on('pause', () => {
                    S.playing = false;
                    el('btn-play').innerHTML = '<i class="fas fa-play"></i>';
                    cancelAnimationFrame(S.raf);
                });

                S.ws.on('audioprocess', t => {
                    const m = Math.floor(t / 60), s = Math.floor(t % 60).toString().padStart(2, '0');
                    ui.time.innerText = `${m}:${s}`;
                });

                //  manual scroll update
                S.ws.on('scroll', () => { if (!S.playing) { S.playing = true; draw(); S.playing = false; } });
            };

            const treeClick = (e) => {
                const t = e.target;
                if (t.classList.contains('node-check')) {
                    e.stopPropagation();
                    const add = t.checked;
                    const nodes = t.classList.contains('group-check')
                        ? t.closest('li').querySelectorAll('.sub-tree .file-check')
                        : [t];

                    nodes.forEach(n => {
                        n.checked = add;
                        add ? S.files.add(n.value) : S.files.delete(n.value);
                    });

                    ui.count.innerText = S.files.size;
                    ui.dl.disabled = S.files.size === 0;
                    el('select-warn').innerText = S.files.size >= 30 ? ' | BULK MODE' : '';
                    return;
                }

                const dir = t.closest('.type-dir');
                if (dir) {
                    const sub = dir.nextElementSibling;
                    sub.classList.toggle('open');
                    dir.querySelector('.fa-caret-right').style.transform = sub.classList.contains('open') ? 'rotate(90deg)' : 'rotate(0deg)';
                }

                const file = t.closest('.type-file');
                if (file) {
                    document.querySelectorAll('.is-active').forEach(x => x.classList.remove('is-active'));
                    file.classList.add('is-active');
                    const { path, name, bitrate } = file.dataset;
                    ui.title.innerText = name;
                    ui.bitrate.innerText = bitrate || '--';
                    ui.bpm.innerText = '--';
                    ui.spin.style.opacity = '1';
                    clear(ctx.grid);
                    S.ws.load(`/stream?file=${encodeURIComponent(path)}`);
                }
            };

            const download = async () => {
                if (S.files.size >= 30) {
                    const w = window.open('about:blank', '_blank', 'width=1,height=1');
                    if (!w) return alert('Enable popups for bulk DL');
                    w.close();
                }

                ui.dl.disabled = true;
                const txt = ui.dl.innerHTML;
                const files = [...S.files];
                const chunks = [];

                while (files.length) chunks.push(files.splice(0, 30));

                try {
                    for (let i = 0; i < chunks.length; i++) {
                        ui.dl.innerHTML = `BATCH ${i + 1}/${chunks.length} <i class="fas fa-cog fa-spin"></i>`;
                        const { jobId } = await fetch('/api/job', {
                            method: 'POST', body: JSON.stringify({ files: chunks[i] }), headers: { 'Content-Type': 'application/json' }
                        }).then(r => r.json());

                        await new Promise((res, rej) => {
                            const iv = setInterval(async () => {
                                const s = (await fetch(`/api/job/${jobId}`).then(r => r.json())).status;
                                if (s === 'ready') { clearInterval(iv); res(); }
                                if (s === 'error') { clearInterval(iv); rej(); }
                            }, 1000);
                        });

                        const url = `/download/${jobId}`;
                        chunks.length === 1 ? window.location.href = url : window.open(url, '_blank');
                        if (chunks.length > 1) await new Promise(r => setTimeout(r, 1000));
                    }
                    ui.dl.innerHTML = 'DONE';
                } catch (e) {
                    ui.dl.innerHTML = 'ERR';
                    console.error(e);
                }
                setTimeout(() => { ui.dl.disabled = false; ui.dl.innerHTML = txt; }, 2000);
            };

            document.addEventListener('DOMContentLoaded', () => {
                initAudio();
                ui.tree.addEventListener('click', treeClick);
                ui.dl.addEventListener('click', download);
                el('btn-play').onclick = () => S.ws.playPause();
                el('btn-stop').onclick = () => { S.ws.stop(); S.ws.seekTo(0); };
                el('zoom-slider').oninput = (e) => S.ws.zoom(e.target.value);
            });
        </script>
